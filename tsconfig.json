{
    "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js"],
    "ts-node": {
        "transpileOnly": true,
        "files": true
    },
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "checkJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./@types"]
    }
}

